@model CommunityEvents.Models.NotificationPreference

@{
	ViewData["Title"] = "Notification Settings";
}

<div class="row justify-content-center">
	<div class="col-md-6">
		<div class="card shadow-sm">
			<div class="card-header bg-white">
				<h4 class="mb-0">Notification Preferences</h4>
			</div>
			<div class="card-body">
				<p class="text-muted">Choose which alerts you want to receive.</p>
				<form asp-action="Settings" method="post">
					<input type="hidden" asp-for="NotificationPreferenceId" />
					<input type="hidden" asp-for="UserId" />

					<div class="mb-4">
						<h6 class="border-bottom pb-2">General Alerts</h6>

						<div class="form-check form-switch mb-3">
							<input class="form-check-input" type="checkbox" asp-for="ReceiveNewEventAlerts" />
							<label class="form-check-label" asp-for="ReceiveNewEventAlerts">
								<strong>New Events</strong><br />
								<small class="text-muted">Notify me whenever a new event is created on the platform.</small>
							</label>
						</div>
					</div>

					<div class="mb-4">
						<h6 class="border-bottom pb-2">My Activities</h6>

						<div class="form-check form-switch mb-3">
							<input class="form-check-input" type="checkbox" asp-for="ReceiveUpdateAlerts" />
							<label class="form-check-label" asp-for="ReceiveUpdateAlerts">
								<strong>Event Updates</strong><br />
								<small class="text-muted">Notify me if an event I joined changes its date or location.</small>
							</label>
						</div>
					</div>

					@if (User.IsInRole("Organizer"))
					{
						<div class="mb-4">
							<h6 class="border-bottom pb-2">Organizer Tools</h6>

							<div class="form-check form-switch mb-3">
								<input class="form-check-input" type="checkbox" asp-for="ReceiveCommentAlerts" />
								<label class="form-check-label" asp-for="ReceiveCommentAlerts">
									<strong>Review Alerts</strong><br />
									<small class="text-muted">Notify me when someone posts a review on my events.</small>
								</label>
							</div>
						</div>
					}

					<div class="d-grid gap-2">
						<button type="submit" class="btn btn-primary">Save Preferences</button>
						<a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@if(TempData["SuccessMessage"] != null)
{
	<div class="alert alert-success mt-3 text-center">
	@TempData["SuccessMessage"]
	</div>
}