@model CommunityEvents.Models.Event
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager


@{
    ViewData["Title"] = "Details";
    var currentUser = await UserManager.GetUserAsync(User);

    //Check if current user is the organizer of the event
    bool isOrganizer = currentUser != null && Model.OrganizerId == currentUser.Id;

    // Check if the current user is already registered for the event
    bool isRegistered = currentUser != null && Model.Registrations != null &&
                        Model.Registrations.Any(r => r.UserId == currentUser.Id);

    // Calculate counts
    int currentCount = Model.Registrations?.Count ?? 0;
    int limit = Model.ParticipantLimit ?? 0;
    string limitDisplay = Model.ParticipantLimit.HasValue ? Model.ParticipantLimit.ToString() : "Unlimited";


}

<h1>Details</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParticipantLimit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParticipantLimit)
        </dd>
    </dl>
</div>

<div class="alert-info mt-3">
    <h5>
        Participants: <strong>@currentCount / @limitDisplay</strong>
    </h5>
</div>

<div class="mt-4">
    @if (isOrganizer)
    {
        <a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-warning">Edit Event</a>
        <a asp-action="Delete" asp-route-id="@Model.EventId" class="btn btn-danger">Delete Event</a>
    }
    else if (isRegistered)
    {
        <div class="alert alert-success d-inline-block">
            You are attending this event.
        </div>
        <form asp-action="Leave" asp-route-id="@Model.EventId" method="post" class="d-inline">
            <button type="submit" class="btn btn-outline-danger">Leave Event</button>
        </form>
    }
    else
    {
        @if (Model.ParticipantLimit.HasValue && currentCount >= limit)
        {
            <button class="btn btn-secondary btn-lg" disabled> Event Full</button>
        }
        else
        {
            <form asp-action="Join" asp-route-id="@Model.EventId" method="post">
				<button type="submit" class="btn btn-primary btn-lg">Register Now</button>
            </form>
        }
    }
</div>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (isOrganizer)
{
    <hr />
    <div class="card mt-4 border-info">
        <div class="card-header bg-info text-white">
            <h4>Organizer Dashboard: Participant List</h4>
        </div>
        <div class="card-body">
            @if (Model.Registrations != null && Model.Registrations.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Registration Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reg in Model.Registrations)
                        {
                            <tr>
                                <td>@reg.User?.Email</td>
                                <td>@reg.RegistrationDate</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <p><strong>Total Participants:</strong> @Model.Registrations.Count / @(Model.ParticipantLimit?.ToString() ?? "Unlimited")</p>
            }
            else
            {
                <p class="text-muted">No participants have registered yet.</p>
            }
        </div>
    </div>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>
